{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["google"],
    "plugins": ["prettier"],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-new": "off", //사용 목적 new 생성자와 같은 특정 유형의 객체를 생성하고, 해당 변수에 객체를 저장할 전형적:
        "no-alert": "off",
        "no-plusplus": "off",
        "no-param-reassign": "off", //매개변수 재할당 금지
        "no-return-assign": "off", //반환에서 할당 금지
        "import/extensions": "off",
        "require-jsdoc": "off",
        "max-depth": ["error", 2],
        "max-lines-per-function": ["error", 15]
    }
}